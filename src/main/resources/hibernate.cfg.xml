<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">dbpassword</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pack_track</property>
		<property name="hibernate.connection.username">dbuser</property>
		<property name="hibernate.default_schema">pack_track</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<mapping resource="model/models/User.hbm.xml" />
		<mapping resource="model/models/Station.hbm.xml" />
		<mapping resource="model/models/Device.hbm.xml" />
		<mapping resource="model/models/UserPrivilege.hbm.xml" />
		<mapping resource="model/models/UserDetail.hbm.xml" />
		<mapping resource="model/models/Category.hbm.xml" />
		<mapping resource="model/models/Customer.hbm.xml" />
		<mapping resource="model/models/Parcel.hbm.xml" />
		<mapping resource="model/models/Train.hbm.xml" />
	</session-factory>
</hibernate-configuration>
